{
    "manifest_version": 2,
    "name": "Task Notes",
    "version": "1.2.0.11",
    "permissions" : ["contextMenus","storage"],
    "icons" : {
      "16" : "image/icon-16.png",
      "128" : "image/icon-128.png"
    },
    "browser_action": {
      "default_title" : "Task Notes",
      "default_icon" : "image/icon.png", 
      "default_popup" : "popup.html"
    },
    "background" : {
      "scripts" : ["js/background.js"],
      "persistent" : true
    }

  }